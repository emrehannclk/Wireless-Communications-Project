version: '3.5'

services:
  postgres:
    image: postgres:13
    environment:
      POSTGRES_USER: zabbix
      POSTGRES_PASSWORD: zabbixpass
      POSTGRES_DB: zabbix
    volumes:
      - pg_data:/var/lib/postgresql/data
    networks:
      - zbx-net  # Postgres servisi iÃ§in zbx-net aÄŸÄ± kullanÄ±lÄ±yor

  zabbix-server:
    image: zabbix/zabbix-server-pgsql:alpine-6.4-latest
    depends_on:
      - postgres
    ports:
      - "10051:10051"
    restart: always
    environment:
      DB_SERVER_HOST: postgres
      POSTGRES_USER: zabbix
      POSTGRES_PASSWORD: zabbixpass
      POSTGRES_DB: zabbix
      ZBX_DEBUGLEVEL: 4  # ðŸ”¥ Log seviyesini INFO+DEBUG yapar
    networks:
      - zbx-net  # Zabbix server iÃ§in zbx-net aÄŸÄ± kullanÄ±lÄ±yor

  zabbix-frontend:
    image: zabbix/zabbix-web-nginx-pgsql:alpine-6.4-latest
    depends_on:
      - zabbix-server
    environment:
      DB_SERVER_HOST: postgres
      POSTGRES_USER: zabbix
      POSTGRES_PASSWORD: zabbixpass
      POSTGRES_DB: zabbix
      ZBX_SERVER_HOST: zabbix-server
      PHP_TZ: Europe/Istanbul
    ports:
      - "8080:8080"
    networks:
      - zbx-net  # Zabbix frontend iÃ§in zbx-net aÄŸÄ± kullanÄ±lÄ±yor


volumes:
  pg_data:

networks:
  zbx-net:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: "172.20.0.0/16"  # FarklÄ± bir IP aralÄ±ÄŸÄ± kullanÄ±yoruz
